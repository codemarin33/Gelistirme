@model KitaplikProjesi_v1._1._2.Models.Personel
    @{
        ViewData["Title"] = "YeniPersonel";
        Layout = "~/Views/Shared/_TestLayout.cshtml";
    }

    <br />
    
    <form class="form-group" method="post" action="YeniPersonel">
        <b>Personel Adı</b>
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
        <br />
        <b>Personel Soyadı</b>
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
        <br />
        <b>Personel Şehir</b>
        @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
        <br />
        <b>Birim</b>
        @Html.DropDownListFor(x => x.BirimID, (List<SelectListItem>)ViewBag.dgr, new { @class="form-control"}));
        <br />
        <button class="btn btn-primary">Yeni Personel Ekle</button>
    </form>

