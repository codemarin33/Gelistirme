@model List<WebApplication1.Models.Kitap >
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index5</title>
</head>
<body>
    <h4>Kitaplarımız</h4>
    <table>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.KitapAd</td>
            <td>@k.Yazar</td>
        </tr>
    }
   </table>
</body>
</html>
